extends layout

block content
  .row
    .col-md-10
      h3 Events
    if coinkey != 'ALL'
      .col-md-1
        if offset - stepSize >= 0
          a.btn.btn-default.navigate(href="/events/"+coinkey+"/" + (offset - stepSize)) Previous
      .col-md-1
          a.btn.btn-default.navigate(href="/events/"+coinkey+"/" + (offset + stepSize)) Next
  .row
    if coinkey == 'ALL'
      for keycoin in coinArr
        .col-md-6
          .table-responsive
            table.table
              tr
                th
                  div.tokenTitle
                    img(src=config.allCoins[keycoin].tokenImg)
                    | #{config.allCoins[keycoin].tokenName} Events
                  div.viewall
                    a.themeanchor(href='/events/'+keycoin) View All
              for event in events[keycoin]
                +allEvent_row(event,keycoin)
    else
      .col-md-12
        .table-responsive
          table.table
            tr
              th Type
              th From
              th To
              th Amount
              th Date
            for event in events
              +event_row(event,coinkey)
